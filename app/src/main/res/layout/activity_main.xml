<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">
        <EditText
            android:id="@+id/et_displey"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="80sp"
            android:enabled="false"
            android:background="@null"
            android:gravity="end|center"
            android:padding="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b_AC"
                android:text="AC"
                style="@style/normal_button" />
            <Button
                android:id="@+id/b_minuspilus"
                style="@style/normal_button"
                android:text="+/-"/>
            <Button
                android:id="@+id/b_qoldiq"
                style="@style/normal_button"
                android:text="%"/>
            <Button
                android:id="@+id/bolish"
                style="@style/normal_button"
                android:text="รท"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b_7"
                android:text="7"
                style="@style/normal_button" />
            <Button
                android:id="@+id/b_8"
                style="@style/normal_button"
                android:text="8"/>
            <Button
                android:id="@+id/b_9"
                style="@style/normal_button"
                android:text="9"/>
            <Button
                android:id="@+id/b_kopaytirish"
                style="@style/normal_button"
                android:text="*"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b_4"
                android:text="4"
                style="@style/normal_button" />
            <Button
                android:id="@+id/b_5"
                style="@style/normal_button"
                android:text="5"/>
            <Button
                android:id="@+id/b_6"
                style="@style/normal_button"
                android:text="6"/>
            <Button
                android:id="@+id/b_ayirish"
                style="@style/normal_button"
                android:text="-"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b_1"
                android:text="1"
                style="@style/normal_button" />
            <Button
                android:id="@+id/b_2"
                style="@style/normal_button"
                android:text="2"/>
            <Button
                android:id="@+id/b_3"
                style="@style/normal_button"
                android:text="3"/>
            <Button
                android:id="@+id/b_qoshish"
                style="@style/normal_button"
                android:text="+"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/b_0"
                android:layout_weight="0.67"
                style="@style/normal_button"
                android:text="0"/>
            <Button
                android:id="@+id/b_butun"
                android:layout_weight="1"
                style="@style/normal_button"
                android:text=","/>
            <Button
                android:id="@+id/b_barobar"
                android:layout_weight="1"
                style="@style/normal_button"
                android:text="="/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>